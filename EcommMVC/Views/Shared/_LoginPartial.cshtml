@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav nav-flex-icons">
            <li class="nav-item">
                <a href="/Manage/Index" class="nav-link waves-effect">
                    <i class="fa fa-user mr-2"></i>Hello @User.Identity.GetUserName()
                </a>
            </li>
            <li class="nav-item"><a href="javascript:sessionStorage.removeItem('accessToken');$('#logoutForm').submit();" class="nav-link waves-effect">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav nav-flex-icons">
        <li class="nav-item">
            <a href="/Account/Login" class="nav-link waves-effect">
                Log In
            </a>

        </li>
    </ul>
}
