@using System.Linq
@using EcommMVC.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Cart</h2>


@if (Model == null){


    <p>You Don't Have Any Items In Your Cart. Please Add Items To Continue</p>


}
else
{

    var subTotal = 0.00;

    List<OrderDetails> orders = new List<OrderDetails>();
 
    foreach (var item in Model)
    {
        subTotal = subTotal + item.ItemPrice;

        OrderDetails order = new OrderDetails();

        order.ProductId = item.ItemId;
        order.UserId = item.UserId;
        order.ItemQuantity = item.ItemQuantity;
        order.ItemName = item.ItemName;
        order.TotalPrice = item.ItemPrice;
        order.OrderStatus = "OrderDetails Placed";
        order.DeliverStatus = false;

        orders.Add(order);
    }


    <table class="table table-bordered table-hover">
        <thread>
            <tr>
                <th>Cart Items</th>
                <th>Item Quantity</th>
                <th>Price</th>
                <td>Action</td>
            </tr>
        </thread>
        <tbody>
        @foreach (var cart in Model)
        {

            <tr>
                <td>@Html.ActionLink((string)cart.ItemName, "Details", "ProductDetails", new { id = cart.ItemId })</td>
                <td>@cart.ItemQuantity</td>
                <td>@cart.ItemPrice</td>
                <td>

                    <form action="@Url.Action("RemoveFromCart", "Cart", new {cartId = cart.CartId})" method="POST">
                        @Html.AntiForgeryToken()
                        <input class="btn btn-danger" type="submit" value="Remove Item From Cart" />
                    </form>

                </td>
                
                



            </tr>

        }
        <tr>
            <td></td>
            <td></td>
            <td>
                <h4>Subtotal: @subTotal</h4>
            </td>
            <td>
                @*<form action="@Url.Action("RemoveFromCart", "Cart", new {cartId = cart.CartId})" method="POST">
                    @Html.AntiForgeryToken()
                    <input class="btn btn-warning" type="submit" value="Place OrderDetails" />
                </form>*@
            </td>
        </tr>
        </tbody>
    </table>

}


